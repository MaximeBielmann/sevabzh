<p><%= @link %></p>

<% if @current_admin %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>Poster un article de blog</h3>
            <%= form_tag "/blog", method: "post" do %>
                <form>
                  <div class="form-group">
                    <select name="admin_id" class="form-control border">
                        <% @admins.each do |admin| %>
                        <option value="<%= admin.id %>"><%= admin.name %></option>
                        <% end %>
                    </select>
                  </div>
                  <div class="form-group">
                    <input type="text" class="form-control border" placeholder="Titre de l'article" name="article_title" />
                  </div>
                  <div class="form-group">
                    <textarea class="form-control border" rows="10" placeholder="Texte" name="article_text"></textarea>
                  </div>
                  <div class="form-group">
                    <input type="datetime-local" class="form-control border" name="article_datetime" />
                  </div>
                  <div class="form-group">
                    <input type="text" class="form-control border" placeholder="URL de l'image mise en avant" name="article_img" />
                  </div>
                  <button type="submit" class="btn btn-primary">Poster l'article</button>
                </form>
            <% end %>
            </div>
    </div>
</div>

<% else %>
  <h1>Bienvenue visiteur anonyme !</h1>
  <a href="/admin/login">S'identifier</a>
<% end %>