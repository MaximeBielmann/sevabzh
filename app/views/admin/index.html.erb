<% if @current_admin %>
 <a href="/admin/logout">Se déconnecter</a>
<% end %>

<p><%= @link %></p>

<% if @current_admin %>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>ICI C'EST L'ADMIN</h1>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
            <div class="col-md-6">
            <h3>Ajouter une sneaker</h3>
            <%= form_tag "/sneakers", method: "post" do %>
                <ul class="list-group">
                  <li class="list-item">Sneakers_ref : <input type="text" label="sneakers_ref" placeholder="sneakers_ref" name="sneakers_ref" /></li>
                  <li class="list-item">Marque : <input type="text" placeholder="brand" name="brand" /></li>
                  <li class="list-item">Modèle : <input type="text" placeholder="model"  name="title" /></li>
                  <li class="list-item">Couleur : <input type="text" placeholder="color"  name="color" /></li>
                  <li class="list-item">URL de l'image : <input type="text" placeholder="img_url"  name="img_url" /></li>
                  <li class="list-item"><input type="submit" value="Ajouter la sneaker" /></li>
                </ul>
            <% end %>
            </div>
            <div class="col-md-6">
                <h3>Update</h3>
                <%= form_tag '/listing_uploader', method: 'post' do %>
                   <input type="submit" value="update" />
            <% end %>
            </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Ajouter un stock</h3>
            <%= form_tag '/stocks', method: 'post' do %>
                <ul class="list-group">
                    <li class="list-item"><select name="sneaker_id">
                    <% @sneakers.each do |sneaker| %>
                    <option value="<%= sneaker.id %>"><%= sneaker.sneakers_ref %> - <%= sneaker.brand %> - <%= sneaker.title %></option>
                    <% end %>
                    </select></li>
                    <li class="list-item">Seller : <input type="text" placeholder="seller" name="seller" /></li>
                    <li class="list-item">Size : <input type="text" placeholder="size" name="size" /></li>
                    <li class="list-item">Offer_link : <input type="text" placeholder="offer_link" name="offer_link" /></li>
                    <li class="list-item">Price : <input type="text" placeholder="price" name="price" /></li>
                    <li class="list-item">Shipping_cost : <input type="text" placeholder="shipping_cost" name="shipping_cost" /></li>
                    <li class="list-item">Shipping_time : <input type="text" placeholder="shipping_time" name="shipping_time" /></li>
                    <li class="list-item"><input type="submit" value="Ajouter le stock" /></li>
                </ul>
            <% end %>
            
        </div>
    </div>
</div>

<% else %>
  <h1>Bienvenue visiteur anonyme !</h1>
  <a href="/admin/login">S'identifier</a>
<% end %>