 <div class="container">
     <section class="slide1">
    		<div class="wrap-slick1">
    			<div class="slick1">
    			    <div class="item-slick1 item1-slick1" style="background-image: url(https://res.cloudinary.com/hqfexni0y/image/upload/v1547055631/pexels-photo-233315.jpg);">
                        <div class="wrap-content-slide1 flex-col-c-m p-l-15 p-r-15 p-t-150 p-b-30">
    						<p class="caption1-slide1 m-text1 t-center">
    							Compare parmi 29 sites de sneakers en un seul clic
    						</p>
    						<p class="caption2-slide1 l-text1 t-center m-b-30 m-t-30">
    							RECHERCHE TA PAIRE MAINTENANT
    						</p>
    						<div class="row justify-content-center">
                            <div class="col-md-8">
                               <%= form_tag "/sneakers/search", class: "card card-sm", method: "post" do %>
                                    <div class="card-body row no-gutters align-items-center">
                                        <div class="col-auto">
                                            <i class="fas fa-search h4 text-body"></i>
                                        </div>
                                        <!--end of col-->
                                        <div class="col">
                                            <input class="form-control form-control-lg form-control-borderless" type="search" name="reference" placeholder="Référence">
                                        </div>
                                        <div class="col">
                                            <input class="form-control form-control-lg form-control-borderless" type="search" name="marque" placeholder="Marque">
                                        </div>
                                        <div class="col">
                                           <input class="form-control form-control-lg form-control-borderless" type="search" name="modele" placeholder="Modèle">
                                        </div>
                                        <div class="col-auto">
                                        <button class="btn btn-lg btn-success" type="submit">Chercher</button>
                                        </div>
                                        <div class="col-auto">
                                          <%= link_to(
                                          'Réinitialiser',
                                          reset_filterrific_url,
                                          ) %>
                                        </div>
                                        <!--end of col-->
                                    </div>
                                    <% end %>
                                </form>
                            </div>
                            <!--end of col-->
                        </div>
                            </div>
    					</div>
    			    </div>
    		    </div>
    		</div>
    </section>
</div>

<div class="container m-t-50 m-b-100">
    <div class="row">
        <div class="col-sm-12">
            <h1 class="text-center">Les dernières sneakers</h1>
        </div>
    </div>
    <div class="row">
        <% @shoes.each do |sneaker| %>
                <div class="col-md-3">
                    <a href="/sneakers/<%= sneaker.id %>">
                        <p class="text-center">
                        <%= image_tag (sneaker.img_url), class: 'img-fluid' %></p>
                        <p><%= sneaker.brand %> - 
                        <%= sneaker.title %> - 
                        <%= sneaker.color %> - 
                        <%= sneaker.sneakers_ref %>
                    </a></p>
                </div>
        <% end %>
    </div>
</div>


