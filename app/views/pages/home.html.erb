<div class="container m-t-50 m-b-100">
    <div class="row">
        <div class="col-sm-12">
            <h1 class="text-center">Les dernières sneakers</h1>
        </div>
    </div>
    <div class="row">
      <% @shoes.each do |shoe| %>
      <div class="col-md-3 p-b-50">
							<!-- Block2 -->
							<div class="block2">
								<div class="block2-img wrap-pic-w of-hidden pos-relative">
									<%= image_tag (shoe.img_url) %>

									<div class="block2-overlay trans-0-4">
										<div class="block2-btn-addcart w-size1 trans-0-4">
											<!-- Button -->
												<a href="/sneakers/<%= shoe.id %>" class="btn btn-primary btn-seva w-100">Voir la sneaker</a>
										</div>
									</div>
								</div>

								<div class="block2-txt p-t-20">
									  <p class="text-center"><a href="/sneakers/<%= shoe.id %>">
                    <%= shoe.sneakers_ref %> - 
                    <%= shoe.brand %> - 
                    <%= shoe.title %> - 
                    <%= shoe.color %></a>
                    </p>
								</div>
					</div>
			</div>
			<% end %>
    </div>
</div>

