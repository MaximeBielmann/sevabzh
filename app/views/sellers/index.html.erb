<div class="container d-flex">
    <div class="row justify-content-center align-self-center m-t-10">
        <% @sellers.each do |seller| %>
                <div class="col-md-2 my-auto m-t-10 m-b-10">
                <%= image_tag (seller.logo_url), size: '200', :class => "img-fluid" %> 
                </div>
                <div class="col-md-4 my-auto m-t-10 m-b-10">
                <a href="/sellers/<%= seller.id %>"><h3><%= seller.vendor %></h3></a>
                </div> 
        <% end %> 
    </div>
</div>