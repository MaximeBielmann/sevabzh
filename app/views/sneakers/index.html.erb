<div class="container">
    <div class="row justify-content-center">
                            <div class="col-lg-12">
                                <form class="card card-sm">
                                    <%= form_for_filterrific(
                                          @filterrific, 
                                          url: sneakers_path, 
                                          html: { id: :manual_filterrific_form }
                                      ) do |f| %>
                                    <div class="card-body row no-gutters align-items-center">
                                        <div class="col-auto">
                                            <i class="fas fa-search h4 text-body"></i>
                                        </div>
                                        <!--end of col-->
                                        <div class="col">
                                            <%= f.text_field(
                                          :search_sneakers_ref,
                                          class: 'filterrific-periodically-observed form-control form-control-lg form-control-borderless',
                                          placeholder: "Référence"
                                        ) %>
                                        </div>
                                        <div class="col">
                                             <%= f.text_field(
                                          :search_brand,
                                          class: 'filterrific-periodically-observed form-control form-control-lg form-control-borderless',
                                          placeholder: "Marque"
                                        ) %>
                                        </div>
                                        <div class="col">
                                            <%= f.text_field(
                                          :search_title,
                                          class: 'filterrific-periodically-observed form-control form-control-lg form-control-borderless',
                                          placeholder: "Modèle"
                                        ) %>
                                        </div>
                                        <div class="col">
                                            <%= f.text_field(
                                          :search_color,
                                          class: 'filterrific-periodically-observed form-control form-control-lg form-control-borderless',
                                          placeholder: "Couleur"
                                        ) %>
                                        </div>
                                        <!--end of col-->
                                        <div class="col-auto">
                                            <%= f.submit '   Chercher   ', class:'btn btn-lg btn-seva' %>
                                        </div>
                                        <div class="col-auto">
                                          <%= link_to(
                                          'Réinitialiser',
                                          reset_filterrific_url,
                                          ) %>
                                        </div>
                                        <!--end of col-->
                                    </div>
                                    <% end %>
                                </form>
                            </div>
                            <!--end of col-->
                        </div>
    
                <%= render(
              partial: 'sneakers/list',
              locals: { sneakers: @sneakers }
            ) %>
    
    <div class="row">
      <div class="col-md-12">
        <%= paginate @sneakers %>
      </div>
    </div>
</div>