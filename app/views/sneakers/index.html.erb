<div class="container">
    <div class="row search-field">
        <div class="col-sm-12" class="flex-sb-m flex-w p-b-35">
            <%= form_for_filterrific @filterrific do |f| %>
            <ul class="flex-w">
              <li class="rs2-select2 bo4 of-hidden w-size12 m-t-5 m-b-5 m-r-10 selection-2">
                <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
                <%= f.text_field(
                  :search_sneakers_ref,
                  class: 'filterrific-periodically-observed',
                  placeholder: "Référence"
                ) %>
              </li>
              <li class="rs2-select2 bo4 of-hidden w-size12 m-t-5 m-b-5 m-r-10 selection-2">
                <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
                <%= f.text_field(
                  :search_brand,
                  class: 'filterrific-periodically-observed',
                  placeholder: "Marque"
                ) %>
              </li>
              <li class="rs2-select2 bo4 of-hidden w-size12 m-t-5 m-b-5 m-r-10 selection-2">
                <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
                <%= f.text_field(
                  :search_title,
                  class: 'filterrific-periodically-observed',
                  placeholder: "Modèle"
                ) %>
              </li>
              <li class="rs2-select2 bo4 of-hidden w-size12 m-t-5 m-b-5 m-r-10 selection-2">
                <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
                <%= f.text_field(
                  :search_color,
                  class: 'filterrific-periodically-observed',
                  placeholder: "Couleur"
                ) %>
              </li>
              <li><%= f.submit '   Chercher   ', class:'btn btn-primary' %>
              </li>
              <li><%= link_to(
                  'Réinitialiser',
                  reset_filterrific_url,
                  ) %>
              </li>
              </div>
              <%# add an automated spinner to your form when the list is refreshed %>
            </ul>
            <% end %>
        </div>
    
    
    <div class="row">
      <% @sneakers.each do |sneaker| %>
      <div class="col-md-2 p-b-50">
							<!-- Block2 -->
							<div class="block2">
								<div class="block2-img wrap-pic-w of-hidden pos-relative">
									<%= image_tag (sneaker.img_url) %>

									<div class="block2-overlay trans-0-4">
										<a href="#" class="block2-btn-addwishlist hov-pointer trans-0-4">
											<i class="icon-wishlist icon_heart_alt" aria-hidden="true"></i>
											<i class="icon-wishlist icon_heart dis-none" aria-hidden="true"></i>
										</a>
										<div class="block2-btn-addcart w-size1 trans-0-4">
											<!-- Button -->
											<button class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4">
												<a href="/sneakers/<%= sneaker.id %>">Voir la sneaker</a>
											</button>
										</div>
									</div>
								</div>

								<div class="block2-txt p-t-20">
									  <p class="text-center"><a href="/sneakers/<%= sneaker.id %>">
                    <%= sneaker.sneakers_ref %> - 
                    <%= sneaker.brand %> - 
                    <%= sneaker.title %> - 
                    <%= sneaker.color %></a>
                    </p>
								</div>
					</div>
			</div>
			<% end %>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= paginate @sneakers %>
      </div>
    </div>
</div>