<div class="container">
    <div class="row justify-content-center">
                            <div class="col-lg-12">
                                <form class="card card-sm">
                                    <%= form_for_filterrific(
                                          @filterrific, 
                                          url: sneakers_path, 
                                          html: { id: :manual_filterrific_form }
                                      ) do |f| %>
                                    <div class="card-body row no-gutters align-items-center">
                                        <div class="col-auto">
                                            <i class="fas fa-search h4 text-body"></i>
                                        </div>
                                        <!--end of col-->
                                        <div class="col">
                                            <%= f.text_field(
                                          :search_sneakers_ref,
                                          class: 'filterrific-periodically-observed form-control form-control-lg form-control-borderless',
                                          placeholder: "Référence"
                                        ) %>
                                        </div>
                                        <div class="col">
                                             <%= f.text_field(
                                          :search_brand,
                                          class: 'filterrific-periodically-observed form-control form-control-lg form-control-borderless',
                                          placeholder: "Marque"
                                        ) %>
                                        </div>
                                        <div class="col">
                                            <%= f.text_field(
                                          :search_title,
                                          class: 'filterrific-periodically-observed form-control form-control-lg form-control-borderless',
                                          placeholder: "Modèle"
                                        ) %>
                                        </div>
                                        <div class="col">
                                            <%= f.text_field(
                                          :search_color,
                                          class: 'filterrific-periodically-observed form-control form-control-lg form-control-borderless',
                                          placeholder: "Couleur"
                                        ) %>
                                        </div>
                                        <!--end of col-->
                                        <div class="col-auto">
                                            <%= f.submit '   Chercher   ', class:'btn btn-lg btn-succes' %>
                                        </div>
                                        <div class="col-auto">
                                          <%= link_to(
                                          'Réinitialiser',
                                          reset_filterrific_url,
                                          ) %>
                                        </div>
                                        <!--end of col-->
                                    </div>
                                    <% end %>
                                </form>
                            </div>
                            <!--end of col-->
                        </div>
    
    
    <div class="row">
      <% @sneakers.each do |sneaker| %>
      <div class="col-md-2 p-b-50">
							<!-- Block2 -->
							<div class="block2">
								<div class="block2-img wrap-pic-w of-hidden pos-relative">
									<%= image_tag (sneaker.img_url) %>

									<div class="block2-overlay trans-0-4">
										<a href="#" class="block2-btn-addwishlist hov-pointer trans-0-4">
											<i class="icon-wishlist icon_heart_alt" aria-hidden="true"></i>
											<i class="icon-wishlist icon_heart dis-none" aria-hidden="true"></i>
										</a>
										<div class="block2-btn-addcart w-size1 trans-0-4">
											<!-- Button -->
											<button class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4">
												<a href="/sneakers/<%= sneaker.id %>">Voir la sneaker</a>
											</button>
										</div>
									</div>
								</div>

								<div class="block2-txt p-t-20">
									  <p class="text-center"><a href="/sneakers/<%= sneaker.id %>">
                    <%= sneaker.sneakers_ref %> - 
                    <%= sneaker.brand %> - 
                    <%= sneaker.title %> - 
                    <%= sneaker.color %></a>
                    </p>
								</div>
					</div>
			</div>
			<% end %>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= paginate @sneakers %>
      </div>
    </div>
</div>