<div class="container">
  <div class="row">
    <div class="col-md-12 text-center title">
      <h2><%= @sneakers.sneakers_ref %> - <%= @sneakers.brand %> - <%= @sneakers.title %> - <%= @sneakers.color %></h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @sneakers.img_url, class:'img-fluid' %>
    </div>
    <div class="col-md-8">
      <h1>SHOPS</h1>
          <div class="row">  
           <% @sellers.each do |seller| %>
                <div class="col-md-4 m-t-20">
                <h5><%= image_tag seller.logo_url, size: '40', class:'img-fluid' %> <%= seller.vendor %></h5>
                </div>
                <div class="col-md-4 m-t-20">
                <% seller.stocks.each do |s| %>
                <p>Taille : <%= s.size %> / Prix : <del><%= s.old_price %></del> <%= s.price %>€</p>
                </div>
                <div class="col-md-4 m-t-20">
                <a href="<%= s.offer_link %>" class="btn btn-primary btn-xs btn-seva " target="_blank" role="button" aria-pressed="true">VOIR L'OFFRE</a>
                </div>
                <% end %>
                <!-- <div class="col-md-10">
                <p>Taille : <%#= seller.size %> / Prix : <del><%#= seller.old_price %></del> <%#= seller.price %>€</p>
                </div>
                <div class="col-md-2">
                <a href="stock.offer_link" class="btn btn-primary btn-xs btn-seva m-t-20" target="_blank" role="button" aria-pressed="true">VOIR L'OFFRE</a> -->
            
          <% end %>
        </div>
    </div>
  </div>
</div>


<% if @current_admin %>

<div class="container m-t-200">    

<h1>Modifier la sneaker</h1>

<div class="row">
    <%= form_tag "/sneakers/#{@sneakers.id}", method: "patch" do %>
  <p><input type="text" value="<%= @sneakers.sneakers_ref %>" name="sneakers_ref" /></p> 
  <p><input type="text" value="<%= @sneakers.brand %>" name="brand" /></p>
  <p><input type="text" value="<%= @sneakers.title %>"  name="title" /></p>
  <p><input type="text" value="<%= @sneakers.color %>"  name="color" /></p>
  <p><input type="text" value="<%= @sneakers.img_url %>"  name="img_url" /></p>
  <p><input type="submit" value="Mettre à jour la sneaker" /></p>
<% end %>
</div>

<div class="row">
<%= form_tag "/sneakers/#{@sneakers.id}", method: "delete" do %>
  <input type="submit" value="Supprimer la sneaker" />
<% end %>
</div>

<div class="row">
<p><a href="/sneakers">Retourner à l’index</a></p>
</div>

</div>

<% end %>